package emc.reports.debtors.customeragingsummary;

import java.math.BigDecimal;

/**
 * @description : Data source for the Debtors customer aging summary report.
 *
 * @date        : 01 Jul 2010
 *
 * @author      : Riaan Nel
 *
 * @version     : 1.0
 */
public class DebtorsCustomerAgingSummaryReportDS {

    private String customerId;
    private String customerName;
    private BigDecimal creditLimit = BigDecimal.ZERO;
    private String paymentTerms;
    private BigDecimal unallocatedCredit = BigDecimal.ZERO;
    private BigDecimal totalOutstanding = BigDecimal.ZERO;
    private BigDecimal currentBinAmount = BigDecimal.ZERO;
    private BigDecimal bin1Amount = BigDecimal.ZERO;
    private BigDecimal bin2Amount = BigDecimal.ZERO;
    private BigDecimal bin3Amount = BigDecimal.ZERO;
    private BigDecimal bin4Amount = BigDecimal.ZERO;
    private BigDecimal bin5Amount = BigDecimal.ZERO;
    private BigDecimal bin6Amount = BigDecimal.ZERO;
    private BigDecimal totalOverdue = BigDecimal.ZERO;

    //Indicates whether unallocated credit should be displayed.
    private boolean showUnallocatedCredits = false;

    private String atDate;
    private String agingMode;
    
    /** Creates a new instance of DebtorsCustomerAgingSummaryReportDS */
    public DebtorsCustomerAgingSummaryReportDS() {

    }

    public BigDecimal getTotalOverdue() {
        return totalOverdue;
    }

    public void setTotalOverdue(BigDecimal totalOverdue) {
        this.totalOverdue = totalOverdue;
    }

    public String getCustomerId() {
        return customerId;
    }

    public void setCustomerId(String customerId) {
        this.customerId = customerId;
    }

    public String getCustomerName() {
        return customerName;
    }

    public void setCustomerName(String customerName) {
        this.customerName = customerName;
    }

    public BigDecimal getCreditLimit() {
        return creditLimit;
    }

    public void setCreditLimit(BigDecimal creditLimit) {
        this.creditLimit = creditLimit;
    }

    public String getPaymentTerms() {
        return paymentTerms;
    }

    public void setPaymentTerms(String paymentTerms) {
        this.paymentTerms = paymentTerms;
    }

    public BigDecimal getTotalOutstanding() {
        return totalOutstanding;
    }

    public void setTotalOutstanding(BigDecimal totalOutstanding) {
        this.totalOutstanding = totalOutstanding;
    }

    public BigDecimal getCurrentBinAmount() {
        return currentBinAmount;
    }

    public void setCurrentBinAmount(BigDecimal currentBinAmount) {
        this.currentBinAmount = currentBinAmount;
    }

    public BigDecimal getBin1Amount() {
        return bin1Amount;
    }

    public void setBin1Amount(BigDecimal bin1Amount) {
        this.bin1Amount = bin1Amount;
    }

    public BigDecimal getBin2Amount() {
        return bin2Amount;
    }

    public void setBin2Amount(BigDecimal bin2Amount) {
        this.bin2Amount = bin2Amount;
    }

    public BigDecimal getBin3Amount() {
        return bin3Amount;
    }

    public void setBin3Amount(BigDecimal bin3Amount) {
        this.bin3Amount = bin3Amount;
    }

    public BigDecimal getBin4Amount() {
        return bin4Amount;
    }

    public void setBin4Amount(BigDecimal bin4Amount) {
        this.bin4Amount = bin4Amount;
    }

    public BigDecimal getBin5Amount() {
        return bin5Amount;
    }

    public void setBin5Amount(BigDecimal bin5Amount) {
        this.bin5Amount = bin5Amount;
    }

    public BigDecimal getBin6Amount() {
        return bin6Amount;
    }

    public void setBin6Amount(BigDecimal bin6Amount) {
        this.bin6Amount = bin6Amount;
    }

    public BigDecimal getUnallocatedCredit() {
        return unallocatedCredit;
    }

    public void setUnallocatedCredit(BigDecimal unallocatedCredit) {
        this.unallocatedCredit = unallocatedCredit;
    }

    public boolean isShowUnallocatedCredits() {
        return showUnallocatedCredits;
    }

    public void setShowUnallocatedCredits(boolean showUnallocatedCredits) {
        this.showUnallocatedCredits = showUnallocatedCredits;
    }

    public String getAtDate() {
        return atDate;
    }

    public void setAtDate(String atDate) {
        this.atDate = atDate;
    }

    public String getAgingMode() {
        return agingMode;
    }

    public void setAgingMode(String agingMode) {
        this.agingMode = agingMode;
    }
}
